<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AgregarDieta">

    <TextView
        android:id="@+id/txttitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombreDieta"
        android:textSize="22sp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/tituloDieta"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Ingresa un nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtalmuerzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/almuerzo"
        android:textSize="22sp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/Almuerzo"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Descripción"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtcomida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comida"
        android:textSize="22sp"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/Comida"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Descripción"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtcena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cena"
        android:textSize="22sp"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/Cena"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Descripción"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/guardaedieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/botonLogin"
        android:backgroundTint="@color/botonLogin"
        android:text="@string/guardar"
        android:layout_margin="30dp"
        android:textColor="@android:color/white" />


</LinearLayout>